@{
    ViewData["Title"] = "Gear Guide";
}

<div class="container">
    <div class="text-center mb-5">
        <h1>Recommended Gear Kits</h1>
        <p class="text-muted">Curated setups for every stage of your journey.</p>
    </div>

    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Kit Comparisons</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Level</th>
                        <th>Body Example</th>
                        <th>Lens Setup</th>
                        <th>Best For</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><span class="badge bg-success">Beginner</span></td>
                        <td>Entry-level DSLR/Mirrorless <br /><small class="text-muted">(Canon Rebel / Sony a6000)</small></td>
                        <td>18–55mm kit lens</td>
                        <td>Learning exposure, family events</td>
                    </tr>
                    <tr>
                        <td><span class="badge bg-warning text-dark">Enthusiast</span></td>
                        <td>Mid-range Mirrorless <br /><small class="text-muted">(Canon EOS R / Sony a7)</small></td>
                        <td>24–70mm f/4 + 50mm f/1.8</td>
                        <td>Travel, portraits, low-light</td>
                    </tr>
                    <tr>
                        <td><span class="badge bg-danger">Advanced</span></td>
                        <td>Full-frame Pro Body <br /><small class="text-muted">(Canon EOS R5 / Nikon Z7 II)</small></td>
                        <td>24–70mm f/2.8 + 70–200mm f/2.8</td>
                        <td>Weddings, sports, client work</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h4><i class="bi bi-briefcase"></i> Essential Accessories</h4>
            <ul class="list-group list-group-horizontal-md mt-3">
                <li class="list-group-item flex-fill">Sturdy Tripod</li>
                <li class="list-group-item flex-fill">Extra Batteries</li>
                <li class="list-group-item flex-fill">Weather-proof Bag</li>
                <li class="list-group-item flex-fill">Cleaning Kit</li>
            </ul>
        </div>
    </div>
</div>